{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "printWidth": 100,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": [
        "*.js",
        "*.jsx",
        "*.tsx",
        "*.ts"
      ],
      "options": {
        "parser": "babel"
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": [
        "*.svelte"
      ],
      "options": {
        "parser": "svelte"
      }
    },
    {
      "files": [
        "app/**/*"
      ],
      "options": {
        "parser": "typescript"
      }
    }
  ],
  "plugins": [
    "prettier-plugin-svelte"
  ]
}

